{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "Blog",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "private": false,
      "required": true,
      "unique": true,
      "maxLength": 120
    },
    "main_img": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "blog_category": {
      "model": "blog-category",
      "via": "blogs"
    },
    "blog_id": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "header_color": {
      "type": "string"
    }
  }
}
