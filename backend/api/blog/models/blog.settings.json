{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "Blog"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "private": false,
      "required": true,
      "unique": true,
      "maxLength": 120
    },
    "main_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "blog_categories": {
      "collection": "blog-category",
      "via": "blogs",
      "dominant": true
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "blog"
    },
    "blog_id": {
      "type": "uid",
      "targetField": "title",
      "required": true
    }
  }
}
