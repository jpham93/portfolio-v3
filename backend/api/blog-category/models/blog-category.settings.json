{
  "kind": "collectionType",
  "collectionName": "blog_categories",
  "info": {
    "name": "Blog Category"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "color": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "category_id": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "blogs": {
      "via": "blog_categories",
      "collection": "blog"
    }
  }
}
